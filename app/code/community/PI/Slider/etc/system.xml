<?xml version="1.0"?>
<config>
	<tabs>
		<logo translate="label">
			<label>PI Slider Settings</label>
			<sort_order>5</sort_order>
		</logo>
	</tabs>	
	<sections>
		<logo translate="label">
			<label>Slider Settings</label>
			<tab>logo</tab>
			<sort_order>1000</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<!-- New groups go here -->
				<logo translate="label">
					<label>Slider Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<display>
							<label>Enable/Disable Brand Slider</label>
						      <frontend_type>select</frontend_type>
							<source_model>slider_adminhtml/system_config_display_mycustomoptions</source_model>
						      <sort_order>10</sort_order>
						      <show_in_default>1</show_in_default>
						      <show_in_website>1</show_in_website>
						      <show_in_store>1</show_in_store>
						</display>
						<setype>
						      <label>Set Type</label>
						      <frontend_type>select</frontend_type>
							<source_model>slider_adminhtml/system_config_source_mycustomoptions</source_model>
							<comment>[Note:You can select either category or product whatever you want to display]</comment>
						      <sort_order>11</sort_order>
						      <show_in_default>1</show_in_default>
						      <show_in_website>1</show_in_website>
						      <show_in_store>1</show_in_store>
						</setype>      
						<speed>
						      <label>Speed</label>
						      <frontend_type>text</frontend_type>
						      <sort_order>12</sort_order>
						      <show_in_default>1</show_in_default>
						      <show_in_website>1</show_in_website>
						      <show_in_store>1</show_in_store>
						</speed>
						<numbers>
						      <label>Total categories/products images</label>
						      <frontend_type>text</frontend_type>
						      <sort_order>13</sort_order>
						      <show_in_default>1</show_in_default>
						      <show_in_website>1</show_in_website>
						      <show_in_store>1</show_in_store>
						</numbers>
		   		        </fields>
				</logo>
			</groups>
	      </logo>
      </sections>
</config>
